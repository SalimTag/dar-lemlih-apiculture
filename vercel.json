{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "vite",
  "installCommand": "npm install --prefix apps/web",
  "buildCommand": "npm run build --prefix apps/web",
  "devCommand": "npm run dev --prefix apps/web",
  "outputDirectory": "apps/web/dist",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
